<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/recruit_JobId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textFontWeight="blod"
            android:layout_centerVertical="true"
            android:text="job"/>
        <TextView
            android:id="@+id/unitId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="元/月"/>
        <TextView
            android:id="@+id/salaryEndId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/unitId"
            android:layout_marginRight="5dp"
            android:textColor="#f00"
            android:layout_centerVertical="true"
            android:text="salaryEnd"/>
        <TextView
            android:id="@+id/divideId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/salaryEndId"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:text="-"/>
        <TextView
            android:id="@+id/salaryStartId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/divideId"
            android:textColor="#f00"
            android:layout_centerVertical="true"
            android:text="salaryStart"/>





    </RelativeLayout>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
            android:id="@+id/eNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="百度"/>
        <TextView
            android:id="@+id/eCityId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="北京市"/>
    </RelativeLayout>

</LinearLayout>