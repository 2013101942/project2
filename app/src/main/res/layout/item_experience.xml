<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="left">
        <TextView
            android:id="@+id/experienceItemCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="公司名字"/>
        <TextView
            android:id="@+id/experienceItemTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/experienceItemCompany"
            android:text="开始时间"/>
        <TextView
            android:id="@+id/experienceItemDivide_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/experienceItemCompany"
            android:layout_toRightOf="@id/experienceItemTimeStart"
            android:layout_marginLeft="5dp"
            android:text="-"/>
        <TextView
            android:id="@+id/experienceItemTimeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/experienceItemCompany"
            android:layout_toRightOf="@id/experienceItemDivide_1"
            android:layout_marginLeft="5dp"
            android:text="结束时间"/>

    </RelativeLayout>
</LinearLayout>