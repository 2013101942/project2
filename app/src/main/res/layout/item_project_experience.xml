<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/projectExperienceItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="项目名字"/>

        <TextView
            android:id="@+id/projectExperienceItemTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/projectExperienceItemName"
            android:text="项目开始时间"/>
        <TextView
            android:id="@+id/projectExperienceItemDivide_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/projectExperienceItemName"
            android:layout_toRightOf="@id/projectExperienceItemTimeStart"
            android:layout_marginLeft="5dp"
            android:text="-"/>
        <TextView
            android:id="@+id/projectExperienceItemTimeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/projectExperienceItemName"
            android:layout_toRightOf="@id/projectExperienceItemDivide_1"
            android:layout_marginLeft="5dp"
            android:text="项目结束时间"/>
        <TextView
            android:id="@+id/projectExperienceItemCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/projectExperienceItemName"
            android:layout_alignParentRight="true"
            android:text="公司名字"/>
    </RelativeLayout>
</LinearLayout>