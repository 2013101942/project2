<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 详细招聘信息-->
            <!--岗位-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/recruitInfoJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="岗位"/>
                <TextView
                    android:id="@+id/recruitInfoTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:text="发布时间"/>
            </RelativeLayout>

            <!--薪资-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/recruitInfoSalaryStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00"/>
                <TextView
                    android:id="@+id/recruitInfoDivide_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00"
                    android:text="-"/>
                <TextView
                    android:id="@+id/recruitInfoSalaryEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00" />
                <TextView
                    android:id="@+id/recruitInfoUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00"
                    android:text="/月"/>
            </LinearLayout>
            <!--需求人数、学历和工作经验-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/recruitInfoStaffNumImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/my"/>
                <TextView
                    android:id="@+id/staffNumPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="招"/>
                <TextView
                    android:id="@+id/recruitInfoStaffNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/StaffNumUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"/>

            </LinearLayout>
            <!--地址-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/recruitInfoAddressImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/didian"/>
                <TextView
                    android:id="@+id/recruitInfoAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="南昌市高新区"/>
            </LinearLayout>
            <!--公司详细信息的链接-->
            <RelativeLayout
                android:id="@+id/recruitInfoCompany"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:background="@drawable/bg_linearbutton">
                <TextView
                    android:id="@+id/recruitInfoCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"

                    android:text="公司名字"/>
                <TextView
                    android:id="@+id/recruitInfoCompanyProperty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recruitInfoCompanyName"
                    android:text="民营企业"/>
                <TextView
                    android:id="@+id/recruitInfoDivide_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/recruitInfoCompanyName"
                    android:layout_toRightOf="@id/recruitInfoCompanyProperty"
                    android:text="|"/>
                <TextView
                    android:id="@+id/recruitInfoCompanyScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recruitInfoCompanyName"
                    android:layout_toRightOf="@id/recruitInfoDivide_2"
                    android:layout_marginLeft="5dp"
                    android:text="1000"/>
                <TextView
                    android:id="@+id/recruitInfoCompanyScaleUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recruitInfoCompanyName"
                    android:layout_toRightOf="@id/recruitInfoCompanyScale"
                    android:text="人"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow_right2"/>
            </RelativeLayout>
            <!--招聘简章-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="招聘简章"/>
                <TextView
                    android:id="@+id/recruitInfo_rules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!-- 经验要求-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:text="经验要求"/>
                <TextView
                    android:id="@+id/recruitInfoExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>

            </LinearLayout>
            <!--申请和收藏按钮-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <Button
                    android:id="@+id/recruitInfo_applyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:text="申请"/>
                <Button
                    android:id="@+id/recruitInfo_collectBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@id/recruitInfo_applyBtn"
                    android:background="@drawable/bg_btn"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:text="收藏"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>